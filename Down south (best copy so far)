// Basic twitch effect
Macro.add('twitch', {
    tags: null,
    handler: function() {
        const $wrapper = $(document.createElement('span'));
        $wrapper.addClass('glitch-text twitch');
        $wrapper.wiki(this.payload[0].contents); // Corrected: use .wiki()
        $wrapper.appendTo(this.output);
    }
});

