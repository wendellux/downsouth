.tooltip {
    position: relative;
    display: inline-block;
    border-bottom: 1px dotted #00FFFF;
    color: #00FFFF;
    cursor: help;
}

.tooltip .tooltiptext {
    visibility: hidden;
    width: 300px;
    background-color: rgba(0, 0, 0, 0.9);
    color: #00FF00;
    text-align: left;
    border: 1px solid #00FFFF;
    box-shadow: 0 0 10px #00FFFF;
    padding: 10px;
    border-radius: 5px;
    
    /* Position the tooltip */
    position: absolute;
    z-index: 1;
    bottom: 125%; /* Default position above */
    left: 50%;
    margin-left: -150px;
    
    /* Fade in/out effect */
    opacity: 0;
    transition: opacity 0.3s;
}

/* Position below when needed */
.tooltip .tooltiptext.below {
    bottom: auto;
    top: 125%;
}

/* Small arrow at the bottom of tooltip when above */
.tooltip .tooltiptext::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 50%;
    margin-left: -5px;
    border-width: 5px;
    border-style: solid;
    border-color: #00FFFF transparent transparent transparent;
}

/* Small arrow at the top of tooltip when below */
.tooltip .tooltiptext.below::after {
    top: auto;
    bottom: 100%;
    border-color: transparent transparent #00FFFF transparent;
}

/* Show the tooltip when hovering */
.tooltip:hover .tooltiptext {
    visibility: visible;
    opacity: 1;
}

/* Add a glitch effect on hover */
.tooltip:hover {
    animation: tooltip-glitch 1s infinite;
}

@keyframes tooltip-glitch {
    0%, 100% { 
        text-shadow: 0 0 2px #00FFFF;
    }
    33% { 
        text-shadow: -1px 0 #FF00FF, 1px 0 #00FFFF;
    }
    66% { 
        text-shadow: 1px 0 #FF00FF, -1px 0 #00FFFF;
    }
}

/* Optional: Add a glitchy effect for some tooltips */
.glitch-text {
    animation: text-distort 3s infinite;
}

@keyframes text-distort {
    0%, 90%, 100% { 
        opacity: 1;
    }
    92% { 
        transform: translate(-2px, 1px);
        opacity: 0.8;
    }
    95% { 
        transform: translate(2px, -1px);
        opacity: 0.9;
    }
}
